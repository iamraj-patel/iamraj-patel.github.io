<style>
:root {
  --font-body: 'Inter', sans-serif;
  --font-heading: 'Poppins', sans-serif;
  
  /* Light Theme */
  --primary-light: #1976d2;
  --accent-light: #fbbc05;
  --text-light: #2d3748;
  --text-secondary-light: #4a5568;
  --card-bg-light: rgba(255, 255, 255, 0.55);
  --card-gradient-light: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
  --item-bg-light: rgba(255, 255, 255, 0.7);
  --border-light: rgba(255, 255, 255, 0.3);
  --body-bg-light: #f4f6fb;
  
  /* Dark Theme */
  --primary-dark: #7bb6ff;
  --accent-dark: #fbc964;
  --text-dark: #e9f1fc;
  --text-secondary-dark: #a0aec0;
  --card-bg-dark: rgba(27, 37, 55, 0.55);
  --card-gradient-dark: linear-gradient(135deg, rgba(255,255,255,0.02) 0%, rgba(255,255,255,0) 100%);
  --item-bg-dark: rgba(27, 37, 55, 0.7);
  --border-dark: rgba(255, 255, 255, 0.1);
  --body-bg-dark: #0f1724;
}

:root {
  --primary: var(--primary-light);
  --accent: var(--accent-light);
  --text: var(--text-light);
  --text-secondary: var(--text-secondary-light);
  --card-bg: var(--card-bg-light);
  --card-gradient: var(--card-gradient-light);
  --item-bg: var(--item-bg-light);
  --border-color: var(--border-light);
}

body[data-theme="dark"] {
  --primary: var(--primary-dark);
  --accent: var(--accent-dark);
  --text: var(--text-dark);
  --text-secondary: var(--text-secondary-dark);
  --card-bg: var(--card-bg-dark);
  --card-gradient: var(--card-gradient-dark);
  --item-bg: var(--item-bg-dark);
  --border-color: var(--border-dark);
}

* { box-sizing: border-box; }
html { scroll-behavior: smooth; }
body {
  margin: 0;
  min-height: 100vh;
  font-family: var(--font-body);
  color: var(--text);
  transition: color 0.45s ease;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow-x: hidden;
  line-height: 1.7;
  background-color: var(--body-bg-light);
  background-image: radial-gradient(at 8% 13%, hsla(215, 98%, 71%, 0.3) 0px, transparent 50%),
                    radial-gradient(at 94% 88%, hsla(125, 98%, 72%, 0.3) 0px, transparent 50%),
                    radial-gradient(at 44% 88%, hsla(35, 98%, 72%, 0.2) 0px, transparent 50%);
  background-attachment: fixed;
}

body[data-theme="dark"] {
  background-color: var(--body-bg-dark);
  background-image: radial-gradient(at 8% 13%, hsla(215, 98%, 21%, 0.5) 0px, transparent 50%),
                    radial-gradient(at 94% 88%, hsla(125, 98%, 22%, 0.4) 0px, transparent 50%),
                    radial-gradient(at 44% 88%, hsla(35, 98%, 32%, 0.3) 0px, transparent 50%);
}

/* ## HEADER & HERO SECTION ## */
header {
  position: relative;
  padding: 3rem 1.5rem;
  color: #fff;
  text-align: center;
  box-shadow: 0 6px 40px rgba(0, 0, 0, 0.1);
  z-index: 10;
  background: linear-gradient(-45deg, #1976d2, #2196f3, #fbbc05, #ff9800);
  background-size: 400% 400%;
  animation: gradientFlow 12s ease infinite;
}

@keyframes gradientFlow {
  0%{background-position:0% 50%}
  50%{background-position:100% 50%}
  100%{background-position:0% 50%}
}

.theme-toggle {
  position: absolute;
  top: 20px;
  right: 20px;
  width: 72px;
  height: 36px;
  background: rgba(255,255,255,0.12);
  border-radius: 999px;
  border: none;
  cursor: pointer;
  padding: 4px;
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  gap: 6px;
  transition: all 0.25s ease;
  box-shadow: 0 4px 14px rgba(0,0,0,0.12);
}
.theme-toggle:hover { transform: translateY(-2px); }
.theme-toggle .icon {
  width: 24px; height: 24px; display:flex; align-items:center; justify-content:center;
  color: rgba(255,255,255,0.95); font-size: 14px; user-select: none; pointer-events: none;
  transition: transform 0.28s ease;
}
.theme-toggle .knob {
  position: absolute; top: 4px; left: 4px; width: 28px; height: 28px; border-radius: 999px;
  background: #fff;
  box-shadow: 0 6px 18px rgba(10, 20, 40, 0.24);
  transition: left 0.32s cubic-bezier(.2,.9,.3,1), transform 0.28s ease;
}
.theme-toggle.light .knob { left: calc(100% - 32px); transform: rotate(18deg); }
.theme-toggle.light .sun { transform: scale(1.06); }
.theme-toggle:not(.light) .moon { transform: scale(1.06); }

.profile-img {
  width: 120px; height: 120px; border-radius: 50%; margin: 0 auto 1.2rem;
  border: 4px solid rgba(255,255,255,0.15); object-fit: cover;
  box-shadow: 0 8px 32px rgba(10, 25, 60, 0.2);
}

h1, h2 { font-family: var(--font-heading); letter-spacing: -0.5px; }
h1 { font-size: 2.5rem; margin: 0.2em 0 0.1em 0; font-weight: 700; }
h2 { color: var(--primary); font-size: 1.8rem; font-weight: 600; margin-bottom: 1.5rem; }
.subtitle { font-size: 1.15rem; margin-bottom: 1.8rem; opacity: 0.95; font-weight: 400; }

.contact {
  margin: 1.5rem 0 0 0; display: flex; justify-content: center;
  gap: 1rem; flex-wrap: wrap; align-items: center;
}
.contact a {
  color: #fff; font-size: 0.95rem; background: rgba(20, 20, 20, 0.15);
  padding: 0.6em 1.2em; border-radius: 40px; text-decoration: none;
  transition: all 0.25s ease; font-weight: 500;
  box-shadow: 0px 4px 10px rgba(0,0,0,0.15);
  display: inline-flex; align-items: center; gap: 0.6em;
}
.contact a:hover {
  background: #fff; color: #1976d2; transform: translateY(-3px) scale(1.05);
  box-shadow: 0px 6px 15px rgba(0,0,0,0.2);
}
.contact a svg { width: 18px; height: 18px; }

/* ## MAIN LAYOUT & "GLASS" CARDS ## */
main {
  max-width: 900px; margin: 0 auto; padding: 0 1rem 3rem 1rem;
}
.card {
  margin-top: 2.5rem;
  padding: 2.2rem 2.5rem;
  border-radius: 18px;
  background-color: var(--card-bg);
  background-image: var(--card-gradient);
  -webkit-backdrop-filter: blur(16px);
  backdrop-filter: blur(16px);
  border: 1px solid var(--border-color);
  box-shadow: 0 8px 32px rgba(0,0,0,0.1);
  transition: all 0.3s cubic-bezier(.25,.8,.25,1);
}
.card:hover {
  transform: translateY(-6px);
  box-shadow: 0 14px 45px rgba(0,0,0,0.15);
}
main > section:first-of-type { margin-top: 3rem; }

/* ## SKILLS SECTION ## */
.skills-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}
.skills-category h3 {
  font-family: var(--font-heading);
  font-size: 1.1rem;
  color: var(--primary);
  margin-top: 0;
  margin-bottom: 1rem;
  border-bottom: 1px solid var(--border-color);
  padding-bottom: 0.5rem;
}
.skills-list {
  display: flex; flex-wrap: wrap; gap: 10px; padding-left: 0;
  list-style: none; margin: 0;
}
.skills-list li {
  background: var(--item-bg);
  border: 1px solid var(--border-color);
  color: var(--text-secondary); padding: 8px 16px;
  border-radius: 30px; font-size: 0.9rem;
  transition: all 0.22s ease; font-weight: 500;
}
.skills-list li:hover {
  background: var(--primary); color: #fff; transform: scale(1.08);
}

/* ## EXPERIENCE & EDUCATION SECTION ## */
.exp-block { margin-bottom: 1.8em; }
.exp-block:not(:last-child) { border-bottom: 1px solid var(--border-color); padding-bottom: 1.8em; }
.exp-header {
  display: flex; justify-content: space-between; align-items: baseline;
  margin-bottom: 0.4em; flex-wrap: wrap; row-gap: 5px;
}
.exp-title {
  font-family: var(--font-heading);
  font-weight: 600; font-size: 1.2rem; color: var(--text);
}
.exp-time {
  font-weight: 500; color: var(--text-secondary); font-size: 0.9rem;
  font-family: var(--font-body); white-space: nowrap;
}
.env { font-size: 0.95rem; color: var(--text-secondary); margin-bottom: 1rem; font-style: italic; }
.exp-block ul { padding-left: 20px; color: var(--text-secondary); margin: 0; }
.exp-block ul li { margin-bottom: 0.5rem; }

/* ## PROJECTS SECTION ## */
.projects-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1.8rem;
}
.project-card {
  background: var(--item-bg);
  padding: 1.8rem;
  border-radius: 12px;
  border: 1px solid var(--border-color);
  transition: all 0.25s ease;
}
.project-card:hover {
  transform: translateY(-4px) scale(1.01);
  box-shadow: 0 10px 30px rgba(0,0,0,0.08);
  border-color: var(--primary);
}
.project-title {
  font-family: var(--font-heading);
  font-size: 1.25rem;
  font-weight: 600;
  margin: 0 0 0.5rem 0;
}
.project-card p {
  margin: 0 0 1.2rem 0;
  color: var(--text-secondary);
}
.project-tags {
  display: flex; flex-wrap: wrap; gap: 8px; list-style: none;
  padding: 0; margin: 0 0 1.2rem 0;
}
.project-tags li {
  background-color: var(--primary); color: #fff; font-size: 0.8rem;
  padding: 4px 12px; border-radius: 20px; font-weight: 500;
}
.project-link {
  display: inline-flex; align-items: center; gap: 0.5rem;
  font-weight: 500; color: var(--primary); text-decoration: none;
  transition: opacity 0.2s;
}
.project-link:hover { opacity: 0.8; text-decoration: underline; }
.project-link svg { width: 18px; height: 18px; }

/* ## CERTIFICATIONS & EDUCATION SECTION ## */
.edu-cert-block { margin-top: 1.5rem; }
.edu-cert-block:first-child { margin-top: 0; }
.edu-cert-block h3 {
  font-family: var(--font-heading);
  font-size: 1.1rem;
  color: var(--text);
  margin: 0 0 1rem 0;
}
.cert-list { display: flex; flex-wrap: wrap; gap: 12px; }
.badge {
  background: var(--accent); color: #111; padding: 0.4em 1em;
  border-radius: 1em; font-size: 0.9em; font-weight: 500;
  display: inline-flex; align-items: center; gap: 0.5rem;
}
.footer-note {
  margin: 3rem 0 1rem 0; text-align: center;
  color: var(--text); font-size: 0.9rem;
  text-shadow: 0 1px 2px rgba(0,0,0,0.1);
}

/* ## NEW: ANIMATIONS ## */
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}
@keyframes scaleIn {
  from { opacity: 0; transform: scale(0.95); }
  to { opacity: 1; transform: scale(1); }
}

/* Page load animations */
.anim-on-load {
  opacity: 0;
  animation: fadeInUp 0.8s ease-out forwards;
}
.profile-img.anim-on-load { animation-name: scaleIn; animation-duration: 0.6s; animation-delay: 0.1s; }
h1.anim-on-load { animation-delay: 0.2s; }
.subtitle.anim-on-load { animation-delay: 0.3s; }
.contact.anim-on-load { animation-delay: 0.4s; }

/* Staggered animations for card content */
.card .anim-child {
  opacity: 0;
}
.card.visible .anim-child {
  animation: fadeInUp 0.6s ease-out forwards;
}
.card.visible .anim-child:nth-child(1) { animation-delay: 0.1s; }
.card.visible .anim-child:nth-child(2) { animation-delay: 0.2s; }
.card.visible .anim-child:nth-child(3) { animation-delay: 0.3s; }
.card.visible .anim-child:nth-child(4) { animation-delay: 0.4s; }
.card.visible .anim-child:nth-child(5) { animation-delay: 0.5s; }

/* ## RESPONSIVE DESIGN ## */
@media (max-width: 768px) {
  h1 { font-size: 2rem; }
  h2 { font-size: 1.5rem; }
  main { padding: 0 0.8rem 2rem 0.8rem; }
  .card { padding: 1.8rem 1.5rem; }
  .exp-header { flex-direction: column; align-items: flex-start; }
  .exp-time { margin-top: 0.2rem; }
}
@media (max-width: 480px) {
  .theme-toggle { top: 12px; right: 12px; width: 64px; height: 32px; }
  .theme-toggle .knob { width: 26px; height: 26px; top: 3px; left: 3px; }
  .theme-toggle.light .knob { left: calc(100% - 29px); }
  .contact { gap: 0.6rem; }
  .contact a { padding: 0.5em 1em; }
}
</style>
